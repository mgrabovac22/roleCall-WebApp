{
    "compilerOptions": {
      "target": "ESNext",               
      "module": "ESNext",                 
      "moduleResolution": "node",       
      "outDir": "./dist",               
      "rootDir": "./src",                
      "esModuleInterop": true,           
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true               
    },
    "include": ["src/**/*.ts"],         
    "exclude": ["node_modules"]          
  }
  